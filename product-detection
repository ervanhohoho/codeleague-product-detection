    "pathlist = Path('resource/train').glob('**/*.jpg')\n",
    "count = 0\n",
    "pathliststr = []\n",
    "for path in pathlist:\n",
    "    print(str(path))\n",
    "    pathliststr.append(str(path))\n",
    "    count = count + 1\n",
    "    if count > 2:\n",
    "        break"
