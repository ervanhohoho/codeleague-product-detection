   "source": [
    "# Adds more samples to training data, i don't think this is needed\n",
    "datagen = ImageDataGenerator(\n",
    "        rotation_range=40,\n",
    "        width_shift_range=0.2,\n",
    "        height_shift_range=0.2,\n",
    "        rescale=1./255,\n",
    "        shear_range=0.2,\n",
    "        zoom_range=0.2,\n",
    "        horizontal_flip=True,\n",
    "        fill_mode='nearest')\n",
    "# the .flow() command below generates batches of randomly transformed images\n",
    "# and saves the results to the `preview/` directory\n",
    "\n",
    "for path in pathliststr:\n",
    "    img = load_img(path)\n",
    "    x = img_to_array(img)\n",
    "    x = x.reshape((1,) + x.shape)    \n",
    "    flowCount = 0\n",
    "    for batch in datagen.flow(x, batch_size=1,\n",
    "                            save_to_dir='preview', save_prefix='prev', save_format='jpeg'):\n",
    "        flowCount += 1\n",
    "        if flowCount > 3:\n",
    "            break  \n",
    "\n",
    "# img = load_img(\"resource/train/train/00/0a4ad21fca96690ad70764e181fa6469.jpg\")\n",
    "# x = img_to_array(img)\n",
    "# type(x)\n",
    "# x.ndim\n",
    "# x.shape"
   ]
  },
